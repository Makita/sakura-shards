<h3><%t :login %></h3>
<%= form_tag :controller => 'admin', :action => 'authenticate' do %>
  <div class="field"><%= label_tag :username %><%= text_field_tag :username %></div>
  <div class="field"><%= label_tag :password %><%= password_field_tag :password %></div>
  <div class="field"><%= submit_tag 'Login', :id => 'submit' %></div>
<% end %>
